    <!-- new UI-->

    <div class="page-content">
       <div class="content">
          <div class="main-box">
             <div class="container-fluid">
                <div class="row justify-content-center mt-0">
                   <div class="col-md-11 text-center p-0 mt-3 mb-2">
                      <div class="ms-card px-0 pt-4 pb-0 mt-3 mb-3">
                         <div class="ms-card-header">
                            <span class="ms-card-header-title">Confirm your details</span>
                         </div>
                         <div class="row">
                            <div class="col-md-12 mx-0">
                               <form class="ms-form">
                                  <fieldset>
                                     <div class="ms-form-card">

                                        <div class="row">
                                           <div class="col-5">
                                              <div class="reader-text pb-5 text-right">
                                                 <span class="text-dark">Your Name* :</span>
                                              </div>
                                           </div>
                                           <div class="col-7 ">
                                              <div class="reader-text pb-5 text-left">
                                                 <span class="text-dark">@Model.customerName</span>
                                              </div>
                                           </div>
                                        </div>

                                        <div class="row">
                                           <div class="col-5">
                                              <div class="reader-text pb-5 text-right">
                                                 <span class="text-dark">Phone Number :</span>
                                              </div>
                                           </div>
                                           <div class="col-7 ">
                                              <div class="reader-text pb-5 text-left">
                                                 <span class="text-dark">@Model.customerPhoneNumber</span>
                                              </div>
                                           </div>
                                        </div>
                                        <div class="row">
                                           <div class="col-5">
                                              <div class="reader-text pb-5 text-right">
                                                 <span class="text-dark">Email :</span>
                                              </div>
                                           </div>
                                           <div class="col-7 ">
                                              <div class="reader-text pb-5 text-left">
                                                 <span class="text-dark">@Model.customerEmail</span>
                                              </div>
                                           </div>
                                        </div>

                                        <div class="row">
                                           <div class="col-5">
                                              <div class="reader-text pb-5 text-right">
                                                 <span class="text-dark">Serial Number :</span>
                                              </div>
                                           </div>
                                           <div class="col-7 ">
                                              <div class="reader-text pb-5 text-left">
                                                 <span class="text-dark">@Model.Serial


                                                 </span>
                                                            @if (@Model.InWarranty == true)
                                                            {
                                                 <span class="text-dark"> (In Warranty) </span>
                                                            }
                                                            else if (@Model.InWarranty == false)
                                                            {
                                                 <span class="text-dark"> (Out Warranty) </span>
                                                            }
                                          </div>
                                       </div>
                                    </div>

                                    <div class="row">
                                       <div class="col-5">
                                          <div class="reader-text pb-5 text-right">
                                             <span class="text-dark">Problem &nbsp; Description :</span>
                                          </div>
                                       </div>
                                       <div class="col-7 ">
                                                        @{
                                                            int a = 0;
                                                        }
                                                        @foreach (var item in Model.problemDescriptions.Select((value, i) => new { i, value }))
                                                        {


                                              <div class="reader-text pb-1 text-left">
                                                 <span class="text-dark">@{
                                                                        ++a;
                                                                    }@a. @item.value</span>
                                              </div>

                                              <br />



                                                        }

                                       </div>
                                    </div>





